<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HumptyPoem">
    <ImageView
        android:id="@+id/t1"
        android:layout_width="500dp"
        android:layout_height="1300dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/humptybg"
        />
    <ImageView
        android:id="@+id/t3"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/humptydumpty"

        />

    <Button
        android:id="@+id/bsound3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/soundbtn"
        android:onClick="playIT"
        />
    <Button
        android:id="@+id/b51"
        android:background="@drawable/prev1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="550dp"
        />
</RelativeLayout>

