<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VWX"
    android:background="@drawable/abcbackground3">
    <ImageView
        android:id="@+id/e22"
        android:layout_width="450dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="40dp"
        android:background="@drawable/v"/>
    <ImageView
        android:id="@+id/e23"
        android:layout_width="450dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="40dp"
        android:layout_below="@id/e22"
        android:background="@drawable/w"/>
    <ImageView
        android:id="@+id/e24"
        android:layout_width="450dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="40dp"
        android:layout_below="@id/e23"
        android:background="@drawable/x"/>

    <Button
        android:id="@+id/b22"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_below="@id/e24"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"
        android:background="#F3F781"
        android:gravity="center"
        android:text="next ->"
        android:textSize="20dp"
        android:textStyle="italic" />
    <Button
        android:id="@+id/b23"
        android:background="@drawable/menu"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/e24"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:gravity="center"

        />
</RelativeLayout>