<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MonthsYear"
    android:orientation="vertical"
    android:background="@drawable/bc_month">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/jan"
            android:layout_margin="40dp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/feb"
            android:layout_margin="40dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/march"
            android:layout_margin="40dp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/apr"
            android:layout_margin="40dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/may"
            android:layout_margin="40dp"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/june"
            android:layout_margin="40dp"

            />
    </LinearLayout>
    <Button
        android:id="@+id/b25"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#FFF1D904"
        android:text="Next"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFF10606"
        android:textStyle="italic"
        android:layout_gravity="center"/>
    </LinearLayout>