<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz1"
    android:background="@drawable/quizbg1"
    android:padding="20dp"
    >
    <TextView
        android:id="@+id/score"
       android:layout_width="150dp"
       android:layout_height="30dp"
       android:background="#00CED1"
        android:text="Score: 0"
       android:textStyle="bold"
       android:textSize="20dp"
       android:gravity="center"
        />
    <TextView
        android:id="@+id/no_ques"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="#00CED1"
        android:text="Ques_No: 1/x"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@id/score"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/Ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Here will be the question."
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="#5D07F7"
        android:layout_below="@+id/no_ques"
        />




    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp">
        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"
            />
        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"
            />
        <RadioButton
            android:id="@+id/radio_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            />
    </RadioGroup>
    <Button
        android:id="@+id/b35"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="50dp"
        android:background="@drawable/menu"
        />
    <Button
        android:id="@+id/b36"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="320dp"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="50dp"
        android:text="CONFIRM"
        android:textStyle="bold"
        android:textSize="15dp"
        android:background="@drawable/confirmbg"
        />
</RelativeLayout>